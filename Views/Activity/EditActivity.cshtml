@model Mindafy.Models.ViewModels.ActivityModel
@{
    ViewBag.Title = "New Activity";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("EditActivity", "Activity", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.IdActivity)
            <div>
                @Html.LabelFor(d => d.NameActivity)
                @Html.TextBoxFor(d => d.NameActivity, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.NameActivity, null, new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.DescriptionActivity)
                @Html.TextBoxFor(d => d.DescriptionActivity, "", new { @class = "form-control" })

            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.StartDateActivity)
                <input type="date" name="StartDateActivity" class="form-control" />
                <span asp-validation-for="StartDateActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.EndDateActivity)
                <input type="date" name="EndDateActivity" class="form-control" />
                <span asp-validation-for="EndDateActivity" class="text-danger"></span>
            </div>

            <div>
                <label>
                    @Html.CheckBox("State", false)
                    Delivery Status
                </label>
            </div>

            <div>
                @Html.LabelFor(d => d.Note)
                @Html.TextBoxFor(d => d.Note, "", new { @class = "form-control" })
            </div>


            <div style="text-align:right;">
                <input value="Save" class="btn btn-primary" type="submit" />
            </div>
        </div>
    </div>

}